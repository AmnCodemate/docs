<div class='header'>

  <div class='left'>

    {{#if devices}}
      <div class="dropdown">
        <a id="dLabel" data-target="#" class="nav nav-device" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
          <i class="im-devices-icon"></i> {{device}} <i class="icon ion-chevron-down"></i>
        </a>
        <ul class="dropdown-menu" aria-labelledby="dLabel">
          <li>Wi-Fi</li>
          {{#contains devices 'argon'}}
          <li><a href="{{path.href}}{{path.name}}/argon/">Argon</a></li>
          {{/contains}}
          {{#contains devices 'photon'}}
          <li><a href="{{path.href}}{{path.name}}/photon/">Photon</a></li>
          {{/contains}}
          {{#contains devices 'core'}}
          <li><a href="{{path.href}}{{path.name}}/core/">Core</a></li>
          {{/contains}}
          <li>Cellular</li>
          {{#contains devices 'boron'}}
          <li><a href="{{path.href}}{{path.name}}/boron/">Boron</a></li>
          {{/contains}}
          {{#contains devices 'electron'}}
          <li><a href="{{path.href}}{{path.name}}/electron/">Electron &amp; E-Series</a></li>
          {{/contains}}
          {{#contains devices 'xenon'}}
          <li>Mesh</li>
          <li><a href="{{path.href}}{{path.name}}/xenon/">Xenon</a></li>
          {{/contains}}
        </ul>
      </div>
    {{/if}}

    <div class="toggle-nav">
      <a href="#" class="subnav-link toggle-navigation">
        <i class="ion-navicon" title="show/hide the navigation"></i>
      </a>
    </div>

    <a href="/">
      <img src="/assets/images/particle-docs.png" id="logo">
    </a>

    <div class="sections">
      <a class="nav {{#is path.href '/'}}active{{/is}}" href="/">Home</a>
      <a class="nav {{#contains path.href 'quickstart'}}active{{/contains}}" href="/quickstart">Quickstart</a>
      <a class="nav {{#contains path.href 'tutorials'}}active{{/contains}}" href="/tutorials">Tutorials</a>
      <a class="nav {{#contains path.href 'reference'}}active{{/contains}}"
      href="/reference">Reference</a>
      <a class="nav {{#contains path.href 'datasheets'}}active{{/contains}}" href="/hardware">Datasheets</a>
      <a class="nav {{#contains path.href 'community'}}active{{/contains}}" href="/community">Community</a>
      <a class="nav {{#contains path.href 'support'}}active{{/contains}}" href="/support">Support</a>
    </div>

    <div class="dropdown mobile-only">
      <a id="dLabel" data-target="#" class="nav" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        {{top-level-category path.href}}
        <i class="icon ion-chevron-down"></i>
      </a>
      <ul class="dropdown-menu" aria-labelledby="dLabel">
        <li><a href="/guide">Guide</a></li>
        <li><a href="/tutorials">Tutorials</a></li>
        <li><a href="/faq">FAQ</a></li>
        <li><a href="/reference">Reference</a></li>
        <li><a href="/hardware">Datasheets</a></li>
        <li><a href="/support">Support</a></li>
      </ul>
    </div>

  </div>

  <div class='right'>

    <div class="search">
      <div class="search-input-wrapper">
        <i class="ion-search"></i>
        <input class="search-box" type="text" placeholder='Search' value=''/>
      </div>
      <div class="search-results">
      </div>
    </div>
    
    <a href='{{edit-link branch path.href path.name}}' class="nav" target="_blank"><i class="ion-edit"></i>Edit</a>

  </div>
</div>
